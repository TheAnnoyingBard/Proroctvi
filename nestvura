
class nestvura:
    def __init__ (self, jmeno, sila, vule, goldy, zivoty=1):
        self.jmeno = jmeno
        self.zlato = goldy
        self.sila = sila
        self.vule = vule
        self.zivoty = zivoty
        self.zivy = True
        
        
        
        
rojduchu = nestvura("Roj duchů", 2, 0, 2, 3)
horskyobr = nestvura("Horský obr", 3, 5, 2)
upir = nestvura("Upír", 5, 8, 10)
pirat = nestvura("Pirát", 2, 0, 1)
